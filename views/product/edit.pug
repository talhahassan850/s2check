extends ../layout

block content
    h1 Edit Product
    form(action="/product/edit/"+product._id,method="post")
        .form-group
            label(for="code") Course Name
            input#code(type="text", class="form-control", name="name",value=product.name)
        .form-group
            label(for="size") Course id
            input#size(type="text", class="form-control", name="id",value=product.id)
        .form-group
            label(for="price") Course Duration
            input#price(type="text", class="form-control", name="duration",value=product.duration)
        .form-group
            label(for="stuff") Course Fee
            input#stuff(type="text", class="form-control", name="fee",value=product.fee)
        input(type="submit", class="btn btn-info")
    